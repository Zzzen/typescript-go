{
    "private": true,
    "name": "@typescript/ast",
    "version": "1.0.0",
    "description": "TypeScript AST definitions",
    "type": "module",
    "engines": {
        "node": ">=20.19"
    },
    "imports": {
        "#enums/*": {
            "@typescript/source": {
                "types": "./src/enums/*.enum.ts",
                "default": "./src/enums/*.ts"
            },
            "types": "./dist/enums/*.enum.d.ts",
            "default": "./dist/enums/*.js"
        }
    },
    "exports": {
        ".": {
            "@typescript/source": "./src/index.ts",
            "default": "./dist/index.js"
        },
        "./is": {
            "@typescript/source": "./src/is.ts",
            "default": "./dist/is.js"
        },
        "./factory": {
            "@typescript/source": "./src/factory.ts",
            "default": "./dist/factory.js"
        },
        "./utils": {
            "@typescript/source": "./src/utils.ts",
            "default": "./dist/utils.js"
        }
    },
    "scripts": {
        "generate:enums": "npx hereby generate:enums --herebyfile ../../Herebyfile.mjs",
        "generate:factory": "node --conditions=@typescript/source --experimental-strip-types --no-warnings scripts/generateFactory.ts",
        "prebuild": "npm run generate:enums && npm run generate:factory",
        "build": "tsc -b"
    }
}
